<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0000"
    tools:context="com.example.vendorapp.Signup">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/linearlayoutmargin"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_text_marginTop"
                android:drawableStart="@drawable/ic_account_circle_white_24dp"
                android:drawableLeft="@drawable/ic_account_circle_white_24dp"
                android:drawablePadding="@dimen/drawablepadding"
                android:ems="16"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingEnd="@dimen/drawablepadding"
                android:paddingStart="@dimen/drawablepadding"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/white" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_Rpassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_text_marginTop"
                android:layout_marginTop="@dimen/space"
                android:drawableStart="@drawable/ic_lock_white_24dp"
                android:drawableLeft="@drawable/ic_lock_white_24dp"
                android:drawablePadding="@dimen/drawablepadding"
                android:ems="16"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingEnd="@dimen/drawablepadding"
                android:paddingStart="@dimen/drawablepadding"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/white" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_RRepassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_text_marginTop"
                android:layout_marginTop="@dimen/space"
                android:drawableStart="@drawable/ic_lock_white_24dp"
                android:drawableLeft="@drawable/ic_lock_white_24dp"
                android:drawablePadding="@dimen/drawablepadding"
                android:ems="16"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingEnd="@dimen/drawablepadding"
                android:paddingStart="@dimen/drawablepadding"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/buttonPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space"
                android:background="@color/white"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:text="Sign Up"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/existinguser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Already Registered? Login Here"
                android:textColor="@android:color/white"
                android:textSize="@dimen/space" />

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/header_text"
        android:layout_height="@dimen/header_text"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/linearlayoutmargin"
        android:visibility="gone" />

</RelativeLayout>
